    <Link name="experiences" link="#" />
  </nav>

  <!-- Main -->
  <main class="flex min-h-screen flex-col-reverse sm:flex-row h-auto -slate-100">
    <div class="flex items-center justify-center text-center sm:justify-normal sm:text-start sm:w-3/5">
      <div>
        <p>hello! I'm</p>
        <h1 class="text-5xl">Jhoan Jimenez</h1>
        <p class="text-2xl text-yellow-500">Full Stack Developer</p>
        <p>texto de ejemplo</p>

        <!-- Buttons -->
        <div class="flex flex-row items-center justify-center sm:items-start sm:justify-normal">
          <a href="#" class="mr-4 my-4 px-12 py-2.5 bg-violet-800 hover:bg-violet-600 duration-150 transition text-center rounded-lg">
            CV
          </a>
          <a href="#" class="ml-4 my-4 px-12 py-2.5 bg-violet-800 hover:bg-violet-600 transition duration-150 text-center rounded-lg">
            CV
          </a>

          <!-- Email -->
         
        </div>

        <!-- Contact -->
        <ul class="flex flex-row items-center justify-center sm:items-start sm:justify-normal flex-wrap">
          <a href="#">
            <Icons name="Linkerdin" link="../../public/linkedin.svg" hover=""/>
          </a>
          <a href="#">
            <Icons name="GitHub" link="../../public/github.svg" hover="" />
          </a>
          <a href="#">
            <Icons name="geniuh7@gmail.com" link="../../public/email.svg" hover="Copiar"/>
          </a>
        </ul>
      </div>
    </div>

    <div class=" sm:w-2/5 w-full bg-slate-950 flex justify-center  aspect-square sm:aspect-auto ">
        <img src="" class="w-max sm:rounded-none rounded-full sm:lnone">

