<script type="module">
  let lastScrollTop = 0; // Store the last scroll position
  const navbar = document.getElementById('navbar');

  window.addEventListener('scroll', () => {
    let currentScroll = window.pageYOffset || document.documentElement.scrollTop;

    // Hide the navbar when scrolling down
    if (currentScroll > lastScrollTop && currentScroll > 100) {
      navbar.style.transform = 'translateY(-100%)';  // Move navbar up (hide)
    } else if (currentScroll < lastScrollTop) {
      navbar.style.transform = 'translateY(0)';  // Show navbar
    }

    // Change background color based on scroll
    console.log(currentScroll)
    if (currentScroll > 30) {
      navbar.classList.add('bg-black');  // Add black background when scrolled down
      navbar.classList.remove('bg-transparent');  // Remove black background when at the top
    } else {
      navbar.classList.remove('bg-black');  // Remove black background when at the top
      navbar.classList.add('bg-transparent');  // Add black background when scrolled down
    }

    lastScrollTop = currentScroll <= 0 ? 0 : currentScroll; // Avoid negative scroll
  });
</script>
